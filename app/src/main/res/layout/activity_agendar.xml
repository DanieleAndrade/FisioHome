<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".activity.AgendarActivity">

    <LinearLayout
        android:id="@+id/linear_data_agendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:contentDescription="@string/dia"
            android:src="@drawable/calendar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_weight="1"
            android:text="Dia / Horário:" />

        <TextView
            android:id="@+id/data_agendamento"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:layout_weight="2"
            android:text="@string/_06_05" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_horarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:contentDescription="@string/local"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:text="Local:  " />

        <TextView
            android:id="@+id/local_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/local"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:layout_weight="2"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_agendamento_fisioterapeuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="50dp"
            android:contentDescription="@string/nome"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/fisioterapeuta_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/doulgas_funny"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_cartao_agendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:contentDescription="@string/meio_de_pagamento"
            android:src="@drawable/creditacard" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:text="Forma de pagamamento:  " />
        <TextView
            android:id="@+id/pagamento_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/dinheiro" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_motivo_agendamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:contentDescription="@string/motivo"
            android:src="@drawable/text" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginVertical="16dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:text="Observações:  " />

        <TextView
            android:id="@+id/motivo_agendamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/doulgas_funny"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black" />
    </LinearLayout>

    <Button
        android:id="@+id/button_confirmar_agendamento"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="100dp"
        android:background="@color/green"
        android:padding="16dp"
        android:text="@string/confirmar"
        android:textColor="@color/whiteButton" />

</LinearLayout>